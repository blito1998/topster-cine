<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<h3>Nova Sala:</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/salas/add" method="post">
            <label for="titulo">Nome: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome Sala" class="form-control mt-2">
            <label for="capacidade">Capacidade: </label>
            <input type="number" id="capacidade" name="capacidade" placeholder="Capacidade" class="form-control mt-2">
            <button type="submit" class="btn btn-success mt-4">Cadastrar</button>
        </form>
    </div>
</div>