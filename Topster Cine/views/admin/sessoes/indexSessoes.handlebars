<div class="container">
    <div class="row">
        <div class="col">
            <h1>Sessoes:</h1>

            <a href="/admin/sessoes/reg"><button class="btn btn-success mt-4">Nova Sessão</button></a>

            {{#each sessoes}}
            <div class="card mt-2">
                <div class="card-body">
                    <h3>{{horario}}</h3>
                    <text><b>Filme: </b></text><text>{{filmeID.titulo}}</text><br /><br />
                    <text><b>Sala: </b></text><text>{{salaID.nomeSala}}</text><br /><br />

                    {{#if status}}
                    <text><b>Status: </b></text><text>Ativa</text><br /><br />
                    {{else}}
                    <text><b>Status: </b></text><text>Inativa</text><br /><br />
                    {{/if}}


                    <form action="/admin/sessoes/publish" method="post">
                        <input type="hidden" name="id" value="{{_id}}" />
                        <button class="btn btn-success mt-2">Publicar</button>
                    </form>
                    <form action="/admin/sessoes/unpublish" method="post">
                        <input type="hidden" name="id" value="{{_id}}" />
                        <button class="btn btn-danger mt-2">Remover Publicação</button>
                    </form>
                </div>
            </div>
            {{else}}
            <h4 class="mt-4">Nenhuma sessão cadastrada!</h4>

            {{/each}}
        </div>
    </div>
</div>




