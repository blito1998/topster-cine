<h1>Filmes:</h1>

<a href="/admin/filme/reg"><button class="btn btn-success mt-4">Novo Filme</button></a>

{{#each filmes}}
<div class="card mt-2">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p><b>Diretor:</b> {{diretor}}</p>
        <p><b>Ano de Lançamento:</b> {{ano}}</p>
        <p><b>Sinopse:</b> {{sinopse}}</p>
        <p><b>Disponibilidade:</b> {{disponibilidade}}</p>
        <a href="/admin/filme/edit/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
        <form action="/admin/filme/delete" method="post">
            <input type="hidden" name="id" value="{{_id}}" />
            <button class="btn btn-danger mt-2">Deletar</button>
        </form>
    </div>
</div>
{{else}}
<h4 class="mt-4">Nenhum filme cadastrado!</h4>

{{/each}}