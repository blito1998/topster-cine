<h3>Novo Produto:</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/produto/add" method="post">
            <label for="nome">Nome do Produto: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome do Produto" class="form-control mt-2">

            <div class="form-group row mt-2">
                <label for="preco" class="col-sm-2 col-form-label mt-2">Preço R$:</label>
                <div class="col-sm-10">
                    <input type="text" id="preco" name="preco" placeholder="00.00" class="form-control mt-2" onkeypress="$(this).mask('999.00', { reverse: true });">
                </div>
            </div>
            <button type="submit" class="btn btn-success mt-4">Cadastrar Produto</button>
        </form>
    </div>
</div>