{{#each erros}}
<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<h3>Novo Produto:</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/promo/add" method="post">
            <label for="idPromo">ID da Promoção: </label>
            <input type="text" id="idPromo" name="idPromo" placeholder="idPromo" class="form-control mt-2">

            <label for="idProd" class="mt-2">Produtos: </label>
            <select multiple name="idProd" class="custom-select">
                {{#each produtos}}
                <option value="{{id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhum produto registrado!</option>
                {{/each}}
            </select>
            <div class="form-group row mt-2">
                <label for="preco" class="col-sm-2 col-form-label mt-2">Preço R$:</label>
                <div class="col-sm-10">
                    <input type="text" id="preco" name="preco" placeholder="00.00" class="form-control mt-2" onkeypress="$(this).mask('999.00', { reverse: true });">
                </div>
            </div>
            <button type="submit" class="btn btn-success mt-4">Cadastrar Promocao</button>
        </form>
    </div>
</div>