{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<h3>Editar Produto:</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/produto/update" method="post">
            <input type="hidden" name="id" value="{{produto.id}}">
            <label for="nome">Nome do Produto: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome do Produto" class="form-control mt-2" value="{{produto.nome}}">

            <div class="form-group row mt-2">
                <label for="preco" class="col-sm-2 col-form-label mt-2">Preço R$:</label>
                <div class="col-sm-10">
                    <input type="text" id="preco" name="preco" placeholder="00,00" class="form-control mt-2" onkeypress="$(this).mask('990,00')" value="{{produto.preco}}">
                </div>
            </div>
            <button type="submit" class="btn btn-success mt-4">Editar Produto</button>
        </form>
    </div>
</div>